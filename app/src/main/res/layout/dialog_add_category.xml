<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_white"
    android:orientation="vertical"
    android:paddingBottom="30dp"

    >
    <TextView
        android:id="@+id/tv_add_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Category"
        android:textSize="30sp"
        android:textColor="#2F2D2C"
        android:fontFamily="@font/sorabold"
        android:gravity="center"
        android:background="@drawable/background_header1"
        android:paddingVertical="20dp"
        />
    <EditText
        android:id="@+id/ed_add_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_white_boder"
        android:layout_marginHorizontal="30dp"
        android:hint="Enter name category"
        android:textColorHint="#2F2D2C"
        android:textSize="24sp"
        android:textColor="#2F2D2C"
        android:fontFamily="@font/sorasemibold"
        android:gravity="center"
        android:paddingVertical="15dp"
        android:layout_marginTop="40dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancle_category"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Cancle"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/sorabold"
            android:textSize="20sp"
            android:padding="20dp"
            android:textColor="@color/black"
            android:background="@drawable/background_gray"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add_category"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:fontFamily="@font/sorabold"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:padding="20dp"
            android:textColor="@color/black"
            android:background="@drawable/background_button_selected_list_custommer"/>
    </LinearLayout>


</LinearLayout>