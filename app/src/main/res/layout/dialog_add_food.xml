<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_white"
    android:orientation="vertical"
    android:paddingBottom="30dp">
    <TextView
        android:id="@+id/tv_add_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Category"
        android:textSize="30sp"
        android:textColor="#2F2D2C"
        android:fontFamily="@font/sorabold"
        android:gravity="center"
        android:background="@drawable/background_header1"
        android:paddingVertical="20dp"
        />
    <EditText
        android:textColor="#2F2D2C"
        android:id="@+id/ed_name_add_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_white_boder"
        android:layout_marginHorizontal="30dp"
        android:hint="Enter name food"
        android:textColorHint="#2F2D2C"
        android:textSize="24sp"
        android:fontFamily="@font/sorasemibold"
        android:gravity="center"
        android:paddingVertical="15dp"
        android:layout_marginTop="40dp"
        />
    <EditText
        android:textColor="#2F2D2C"

        android:id="@+id/ed_price_add_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_white_boder"
        android:layout_marginHorizontal="30dp"
        android:paddingEnd="80dp"
        android:paddingStart="40dp"
        android:hint="Price"
        android:textColorHint="#2F2D2C"
        android:textSize="24sp"
        android:fontFamily="@font/sorasemibold"
        android:gravity="center"
        android:paddingVertical="15dp"
        android:layout_marginTop="40dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2F2D2C"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Choose Image"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_image_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:background="@drawable/background_white_boder"
            android:text="Click Here"
            android:textColor="@color/black"
            android:padding="10dp"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_add_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginStart="50dp"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/imageView_add_food"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/lemon_tea"
                android:scaleType="fitXY"
                />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancle_food"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Cancle"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/sorabold"
            android:textSize="20sp"
            android:padding="20dp"
            android:textColor="@color/black"
            android:background="@drawable/background_gray"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add_food"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:fontFamily="@font/sorabold"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:padding="20dp"
            android:textColor="@color/black"
            android:background="@drawable/background_button_selected_list_custommer"/>
    </LinearLayout>


</LinearLayout>