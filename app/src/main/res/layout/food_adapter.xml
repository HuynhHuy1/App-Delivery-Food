<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/background_white"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:layout_columnWeight="1"
            android:layout_marginStart="10dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="20dp"
                >

                <ImageView
                    android:id="@+id/image_food_adapter"
                    android:layout_width="match_parent"
                    android:layout_height="152dp"
                    android:scaleType="fitXY" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/tv_name_food_adapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textColor="@color/black"
                android:text="Cappucino"
                android:textSize="18sp"
                android:textStyle="bold"
                android:lineHeight="20dp"
                android:letterSpacing="0.06"
                />
            <TextView
                android:id="@+id/tv_subname_food_adapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textColor="#9B9B9B"
                android:text="with Chocolate"
                android:textSize="14sp"
                android:textStyle="italic"
                android:lineHeight="16dp"
                android:letterSpacing="0.04"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/price_food_adapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:text="$ 4.53"
                    android:textColor="#2F4B4E"
                    android:textSize="22sp"
                    android:lineHeight="22dp"
                    />
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="7dp"
                    android:textSize="22dp"
                    android:text="+"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/background_button_selected_list_custommer"
                    />
            </LinearLayout>

        </LinearLayout>


    </GridLayout>