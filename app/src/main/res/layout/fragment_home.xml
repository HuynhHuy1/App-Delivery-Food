<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.customer.HomeFragment"
    android:background="@drawable/backgroundhomecustomer">
    <LinearLayout
        android:id="@+id/location"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="53dp"
        android:layout_marginStart="30dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textStyle="italic"
            android:textSize="15sp"
            android:lineHeight="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Da Nang"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:lineHeight="18dp"
            />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/location"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/location"
        android:layout_marginEnd="25dp"
        app:cardCornerRadius="20dp"
        >
        <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/avt3"
            android:scaleType="fitXY"
            />
    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_custommer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/cardView1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginHorizontal="35dp"
        app:queryHint="Search Coffee"
        android:background="@drawable/searchview_background"
        app:iconifiedByDefault="false"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:layout_constraintTop_toBottomOf="@id/search_custommer"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="35dp"
        app:cardCornerRadius="25dp"
        >
        <ImageView
            android:id="@+id/imageSlide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/slideshow1"
            />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/linear_list_cate1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardView3"
        android:layout_marginStart="35dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        >
        <TextView
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cappucino"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/background_button_selected_list_custommer"
            android:textSize="14sp"
            android:textStyle="normal"
            android:lineHeight="18sp"
            android:layout_marginEnd="10dp"
            />
        <TextView
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Machiato"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="italic"
            android:lineHeight="18sp"
            android:background="@drawable/background_button_list_custommer"
            android:layout_marginEnd="10dp"
            />
        <TextView
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lattes"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="italic"
            android:lineHeight="18sp"
            android:background="@drawable/background_button_list_custommer"
            android:layout_marginEnd="10dp"
            />
        <TextView
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Americano"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="italic"
            android:lineHeight="18sp"
            android:background="@drawable/background_button_list_custommer"
            android:layout_marginEnd="10dp"
            />
    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear_list_cate1"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal"
        android:columnCount="2"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/background_white"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:layout_columnWeight="1"
            android:layout_marginStart="10dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="20dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/capucino1"
                    android:scaleType="fitXY"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textColor="@color/black"
                android:text="Cappucino"
                android:textSize="18sp"
                android:textStyle="bold"
                android:lineHeight="20dp"
                android:letterSpacing="0.06"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textColor="#9B9B9B"
                android:text="with Chocolate"
                android:textSize="14sp"
                android:textStyle="italic"
                android:lineHeight="16dp"
                android:letterSpacing="0.04"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:text="$ 4.53"
                    android:textColor="#2F4B4E"
                    android:textSize="22sp"
                    android:lineHeight="22dp"
                    />
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="7dp"
                    android:textSize="22dp"
                    android:text="+"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/background_button_selected_list_custommer"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/background_white"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:layout_columnWeight="1"
            android:layout_marginStart="10dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="20dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/capucino1"
                    android:scaleType="fitXY"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textColor="@color/black"
                android:text="Cappucino"
                android:textSize="18sp"
                android:textStyle="bold"
                android:lineHeight="20dp"
                android:letterSpacing="0.06"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textColor="#9B9B9B"
                android:text="with Chocolate"
                android:textSize="14sp"
                android:textStyle="italic"
                android:lineHeight="16dp"
                android:letterSpacing="0.04"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:text="$ 4.53"
                    android:textColor="#2F4B4E"
                    android:textSize="22sp"
                    android:lineHeight="22dp"
                    />
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="7dp"
                    android:textSize="22dp"
                    android:text="+"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/background_button_selected_list_custommer"
                    />
            </LinearLayout>

        </LinearLayout>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>