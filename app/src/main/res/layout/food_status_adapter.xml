<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal"
    android:paddingStart="10dp">

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="80dp"
    app:cardCornerRadius="15dp">

    <ImageView
        android:id="@+id/image_status_food"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/capucino1" />
</androidx.cardview.widget.CardView>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:paddingTop="15dp">

    <TextView
        android:id="@+id/name_food_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/sorasemibold"
        android:lineHeight="22dp"
        android:text="Cappucino"
        android:textColor="#2F2D2C"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/count_food_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/sorasemibold"
        android:lineHeight="18dp"
        android:text="x 2"
        android:textColor="#9B9B9B"
        android:textSize="13sp" />

</LinearLayout>

<TextView
    android:id="@+id/price_food_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="end"
    android:paddingVertical="20dp"
    android:layout_marginEnd="10dp"
    android:fontFamily="@font/sorasemibold"
    android:lineHeight="20dp"
    android:text="$ 5.53"
    android:textColor="#2F2D2C"
    android:textSize="18sp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/imageview2" />
</LinearLayout>