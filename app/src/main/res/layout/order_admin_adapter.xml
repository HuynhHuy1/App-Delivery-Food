<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/background_gray2"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/background_green"
                android:fontFamily="@font/sorasemibold"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:text="ORDER"
                android:textColor="#00AB56"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/time_order_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                android:text="19/04/2020, 04:20"
                android:textColor="#808089"
                android:textSize="12dp" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_status_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />



        <ImageView
            android:id="@+id/imageview1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:background="#EAEAEA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/sorasemibold"
                android:lineHeight="20dp"
                android:text="Total Payment"
                android:textColor="#2F2D2C"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/total_payment_status_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="end"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/sorasemibold"
                android:lineHeight="20dp"
                android:text="$ 5.53"
                android:textColor="#2F2D2C"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_admin_confirm"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/background_white"
                android:fontFamily="@font/sorasemibold"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                android:text="Comfirm"
                android:layout_marginStart="90dp"
                android:textColor="@color/black"
                android:layout_marginEnd="15dp"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/btn_complete_admin"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/background_white"
                android:fontFamily="@font/sorasemibold"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                android:text="Complete"
                android:layout_marginStart="90dp"
                android:textColor="@color/black"
                android:layout_marginEnd="15dp"
                android:textSize="15sp"
                android:visibility="gone"/>

        </LinearLayout>



    </LinearLayout>